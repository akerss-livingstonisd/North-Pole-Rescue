  <script>
    const synth = new Tone.Synth().toDestination();

    // Notes for our piano (C4â€“D5)
    const notes = [
      { note: "C4", color: "white", label: "C" },
      { note: "C#4", color: "black", left: 35, label: "C#" },
      { note: "D4", color: "white", label: "D" },
      { note: "D#4", color: "black", left: 90, label: "D#" },
      { note: "E4", color: "white", label: "E" },
      { note: "F4", color: "white", label: "F" },
      { note: "F#4", color: "black", left: 200, label: "F#" },
      { note: "G4", color: "white", label: "G" },
      { note: "G#4", color: "black", left: 255, label: "G#" },
      { note: "A4", color: "white", label: "A" },
      { note: "A#4", color: "black", left: 310, label: "A#" },
      { note: "B4", color: "white", label: "B" },
      { note: "C5", color: "white", label: "C" },
      { note: "C#5", color: "black", left: 420, label: "C#" },
      { note: "D5", color: "white", label: "D" }
    ];

    // SONG 1: Up On The Housetop phrase
    const song1 = ["G4", "G4", "A4", "G4", "E4", "C4", "E4", "G4"];
    // SONG 2: Rudolph phrase
    const song2 = ["G4", "A4", "G4", "E4", "C5", "A4", "G4"];

    let userSequence = [];
    let level = 1; // Start at song 1

    const messageEl = document.getElementById("message");
    const pianoDiv = document.getElementById("piano");

    // Build the piano
    notes.forEach((key) => {
      const el = document.createElement("div");
      el.classList.add(key.color === "white" ? "white-key" : "black-key");
      if (key.color === "black") el.style.left = key.left + "px";

      if (key.color === "white") {
        const label = document.createElement("div");
        label.classList.add("label");
        label.textContent = key.label;
        el.appendChild(label);
      }

      el.onclick = async () => {
        await Tone.start();
        synth.triggerAttackRelease(key.note, "8n");
        userSequence.push(key.note);

        // Check which level we're on
        const target = level === 1 ? song1 : song2;

        if (userSequence.length === target.length) {
          if (userSequence.join() === target.join()) {
            if (level === 1) {
              messageEl.textContent = "âœ… Correct! The reindeer might know! Which one should we ask?";
              level = 2;
            } else {
              messageEl.textContent = "Of Course! I think he is in the flight room";
setTimeout(() => {
        window.location.href = "Rudolph.html";  // <-- redirect to Magic Lens!
      }, 1800);
            }
          } else {
            messageEl.textContent = "âŒ Try again!";
          }
          userSequence = [];
        }
      };
      pianoDiv.appendChild(el);
    });

    // Initial instruction
    messageEl.textContent = "The keys to the next step are before you";

const returnBookBtn = document.getElementById("returnBookBtn");

returnBookBtn.addEventListener("click", () => {
  // Start the flip animation
  returnBookBtn.classList.add("return-anim");

  // After the animation finishes, go back to the log page
  setTimeout(() => {
    window.location.href = "Toy Log.html";  // must exactly match your file name
  }, 600); // 600ms = 0.6s to match the animation duration
});


  </script>
